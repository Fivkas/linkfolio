generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Link {
  id        String   @id @default(uuid()) // Unique ID for Link
  title     String   // Title (e.g. "My Instagram")
  url       String   // Link (e.g. "https://instagram.com/fivkas")
  userId    String   // THIS IS THE KEY: Clerk ID 
  createdAt DateTime @default(now()) // When created

  // Extra: To appear in the order the user wants (later)
  // order     Int      @default(0) 
}